service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      function isSelf() {
        return request.auth.uid == userId;
      }

      allow create: if isSelf() && request.resource.data.isAdmin == false;
      allow update: if isSelf() && request.resource.data.isAdmin == resource.data.isAdmin;
    }

    match /events/{event} {
      allow read: if isSignedIn()
      allow update: if isSignedIn()
        && resource.data.timestamp.date() > request.time
        && request.writeFields.size() == 1
        && (('attendees.' + request.auth.uid) in request.writeFields)
        && ((request.resource.data.attendees[(request.auth.uid)] == (request.auth.token.name)
          && resource.data.attendees.size() < resource.data.game.maxPlayers)
          || !(request.auth.uid in request.resource.data.attendees))
    }
  }
}